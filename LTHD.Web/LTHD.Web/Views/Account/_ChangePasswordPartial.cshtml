@using Microsoft.AspNet.Identity
@model LTHD.Web.Models.ManageUserViewModel

<strong>@User.Identity.GetUserName()</strong>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Thay đổi mật khẩu</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group" style="margin:0; margin-bottom:15px;">
        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @placeholder = "Mật khẩu hiện tại" })
    </div>
    <div class="form-group" style="margin:0; margin-bottom:15px;">
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "Mật khẩu mới" })
    </div>
    <div class="form-group" style="margin:0; margin-bottom:15px;">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu mới" })
    </div>

    <div class="form-group" style="margin:0; margin-bottom:15px;">
        <input type="submit" value="Thay đổi mật khẩu" class="btn btn-danger" />
    </div>
}
