@model LTHD.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Tạo mới tài khoản";
}

<div class="container">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2>@ViewBag.Title.</h2>
            <hr class="colorgraph" />
            @Html.ValidationSummary()
            <div class="form-group" style="margin: 0; margin-bottom: 15px;">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-lg", @placeholder = "Tên đăng nhập" })
            </div>
            <div class="form-group" style="margin: 0; margin-bottom: 15px;">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "Mật khẩu" })
            </div>
            <div class="form-group" style="margin: 0; margin-bottom: 15px;">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", @placeholder = "Nhập lại mật khẩu" })
            </div>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <input type="submit" class="btn btn-lg btn-success btn-block" value="Đăng ký" />
                </div>
            </div>
        }

    </div>
</div>
